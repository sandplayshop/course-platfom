<h1 class="mb-4">我的課程</h1>

<% if @enrolled_courses.any? %>
  <div class="row">
    <% @enrolled_courses.each do |enrollment| %>
      <% course = enrollment.course %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= course.title %></h5>
            <div class="card-text mb-3 flex-grow-1">
              <%= truncate(course.description.to_plain_text, length: 100) %>
            </div>
            <p class="card-text">
              <% if enrollment.expires_at %>
                <strong>到期日:</strong> <%= enrollment.expires_at.strftime("%Y/%m/%d") %>
              <% else %>
                <strong>到期日:</strong> 永久
              <% end %>
            </p>
            <div class="mt-auto">
              <%= link_to "開始學習", course_lesson_path(course, course.lessons.first), class: "btn btn-success" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-info" role="alert">
    您目前沒有已開通的課程。
    <%= link_to "前往課程列表", courses_path, class: "alert-link" %>
  </div>
<% end %>

